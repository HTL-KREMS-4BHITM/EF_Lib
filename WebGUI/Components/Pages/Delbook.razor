@page "/delbook"
@rendermode InteractiveServer
@using Domain.Interfaces
@using Model.Entities
@inject IRepository<Book> BooksRepository
@inject NavigationManager _navigationManager

<h3>BooksDel</h3>
<section>
    <div class="container container-lg">
        <div class="row">
            @foreach (var book in _books)
            {
                <div class="col-8">
                    <p>
                        @book.Title
                    </p>
                </div>
                <div class="col-4">
                    <button class="btn btn-primary" @onclick="() => Delete(book)" @onclick:preventDefault>
                        <i class="bi bi-trash3-fill"></i>
                    </button>
                </div>
            }
        </div>
    </div>
</section>




@code {

    protected override void OnInitialized()
    {
        base.OnInitialized();
        _books = BooksRepository.ReadAll();
    }

    List<Book> _books = new();



    
    
    private void Delete(Book book)
    {
        BooksRepository.Delete(book.Id);
        NevigateToYourUrl();

    }
    
    void NevigateToYourUrl()
    {
        _navigationManager.NavigateTo("/delbook", true);
    }
}